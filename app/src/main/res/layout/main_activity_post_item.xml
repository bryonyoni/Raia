<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/userImageView"
                android:layout_width="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_back"
                android:layout_height="30dp" />

            <!--Announcement ui-->
            <android.support.v7.widget.CardView
                android:id="@+id/announcementCardView"
                android:layout_width="match_parent"
                android:visibility="gone"
                app:cardElevation="0dp"
                app:cardCornerRadius="14dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/announcementUploaderNameTextView"
                            android:layout_width="wrap_content"
                            android:text="John Doe."
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/announcementCountyNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Nairobi."
                            android:textSize="11sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/announcementDetailsTextView"
                        android:layout_width="match_parent"
                        android:text="Upload Details blah blah blah."
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="11sp"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:visibility="visible"
                        android:layout_margin="10dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="14dp"
                        android:layout_height="250dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/announcementPostImageViewBack"
                                android:src="@drawable/b"
                                android:layout_width="match_parent"
                                android:scaleType="centerCrop"
                                android:alpha="0.25"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:id="@+id/announcementImageView"
                                android:layout_width="match_parent"
                                android:scaleType="fitCenter"
                                android:layout_height="match_parent" />

                            <ProgressBar
                                android:id="@+id/announcementBlurProgressBar"
                                style="?android:attr/progressBarStyle"
                                android:layout_alignParentEnd="true"
                                android:visibility="invisible"
                                android:layout_margin="5dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--Poll ui-->
            <android.support.v7.widget.CardView
                android:id="@+id/pollCardView"
                android:layout_width="match_parent"
                android:visibility="gone"
                app:cardElevation="0dp"
                app:cardCornerRadius="14dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/pollUploaderNameTextView"
                            android:layout_width="wrap_content"
                            android:text="John Doe."
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/pollCountyNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Nairobi."
                            android:textSize="11sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/pollDetailsTextView"
                        android:layout_width="match_parent"
                        android:text="Upload Details blah blah blah."
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="11sp"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content">

                            <!--Option 1-->
                            <LinearLayout
                                android:id="@+id/option1LinearLayout"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_height="wrap_content">

                                <!--option text and percentage-->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <CheckBox
                                        android:id="@+id/pollOption1CheckBox"
                                        android:layout_width="wrap_content"
                                        android:text="Option One."
                                        android:scaleX="0.9"
                                        android:scaleY="0.9"
                                        android:textSize="12sp"
                                        android:layout_marginStart="1dp"
                                        android:layout_centerVertical="true"
                                        android:textColor="@color/grey"
                                        android:layout_height="30dp" />

                                    <TextView
                                        android:id="@+id/option1PercentageTextView"
                                        android:layout_width="wrap_content"
                                        android:text="37%"
                                        android:layout_marginRight="10dp"
                                        android:textSize="12sp"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_height="wrap_content" />

                                </RelativeLayout>

                                <!--percentage bar-->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_height="4dp">

                                    <View
                                        android:layout_width="match_parent"
                                        android:visibility="gone"
                                        android:translationX="-160dp"
                                        android:background="@color/colorAccent"
                                        android:layout_height="match_parent"/>

                                    <ProgressBar
                                        android:id="@+id/option1PercentageBarView"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="5dp"
                                        android:paddingLeft="1dp"
                                        android:paddingRight="1dp"
                                        android:indeterminate="false"
                                        android:max="100"
                                        android:progress="40"/>

                                </RelativeLayout>

                            </LinearLayout>

                            <!--Option 2-->
                            <LinearLayout
                                android:id="@+id/option2LinearLayout"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_height="wrap_content">

                                <!--option text and percentage-->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <CheckBox
                                        android:id="@+id/option2CheckBox"
                                        android:layout_width="wrap_content"
                                        android:text="Option One."
                                        android:scaleX="0.9"
                                        android:scaleY="0.9"
                                        android:textSize="12sp"
                                        android:layout_marginStart="1dp"
                                        android:layout_centerVertical="true"
                                        android:textColor="@color/grey"
                                        android:layout_height="30dp" />

                                    <TextView
                                        android:id="@+id/option2PercentageTextView"
                                        android:layout_width="wrap_content"
                                        android:text="37%"
                                        android:layout_marginRight="10dp"
                                        android:textSize="12sp"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_height="wrap_content" />

                                </RelativeLayout>

                                <!--percentage bar-->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_height="4dp">

                                    <View
                                        android:layout_width="match_parent"
                                        android:visibility="gone"
                                        android:translationX="-160dp"
                                        android:background="@color/colorAccent"
                                        android:layout_height="match_parent"/>

                                    <ProgressBar
                                        android:id="@+id/option2PercentageBarView"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="5dp"
                                        android:paddingLeft="1dp"
                                        android:paddingRight="1dp"
                                        android:indeterminate="false"
                                        android:max="100"
                                        android:progress="40"/>

                                </RelativeLayout>

                            </LinearLayout>

                            <!--Option 3-->
                            <LinearLayout
                                android:id="@+id/option3LinearLayout"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_height="wrap_content">

                                <!--option text and percentage-->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <CheckBox
                                        android:id="@+id/option3CheckBox"
                                        android:layout_width="wrap_content"
                                        android:text="Option One."
                                        android:scaleX="0.9"
                                        android:scaleY="0.9"
                                        android:textSize="12sp"
                                        android:layout_marginStart="1dp"
                                        android:layout_centerVertical="true"
                                        android:textColor="@color/grey"
                                        android:layout_height="30dp" />

                                    <TextView
                                        android:id="@+id/option3PercentageTextView"
                                        android:layout_width="wrap_content"
                                        android:text="37%"
                                        android:layout_marginRight="10dp"
                                        android:textSize="12sp"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_height="wrap_content" />

                                </RelativeLayout>

                                <!--percentage bar-->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_height="4dp">

                                    <View
                                        android:layout_width="match_parent"
                                        android:visibility="gone"
                                        android:translationX="-160dp"
                                        android:background="@color/colorAccent"
                                        android:layout_height="match_parent"/>

                                    <ProgressBar
                                        android:id="@+id/option3PercentageBarView"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="5dp"
                                        android:paddingLeft="1dp"
                                        android:paddingRight="1dp"
                                        android:indeterminate="false"
                                        android:max="100"
                                        android:progress="40"/>

                                </RelativeLayout>

                            </LinearLayout>

                            <!--Option 4-->
                            <LinearLayout
                                android:id="@+id/option4LinearLayout"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_height="wrap_content">

                                <!--option text and percentage-->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <CheckBox
                                        android:id="@+id/option4CheckBox"
                                        android:layout_width="wrap_content"
                                        android:text="Option One."
                                        android:scaleX="0.9"
                                        android:scaleY="0.9"
                                        android:textSize="12sp"
                                        android:layout_marginStart="1dp"
                                        android:layout_centerVertical="true"
                                        android:textColor="@color/grey"
                                        android:layout_height="30dp" />

                                    <TextView
                                        android:id="@+id/option4PercentageTextView"
                                        android:layout_width="wrap_content"
                                        android:text="37%"
                                        android:layout_marginRight="10dp"
                                        android:textSize="12sp"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_height="wrap_content" />

                                </RelativeLayout>

                                <!--percentage bar-->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_height="4dp">

                                    <View
                                        android:layout_width="match_parent"
                                        android:visibility="gone"
                                        android:translationX="-160dp"
                                        android:background="@color/colorAccent"
                                        android:layout_height="match_parent"/>

                                    <ProgressBar
                                        android:id="@+id/option4PercentageBarView"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="5dp"
                                        android:paddingLeft="1dp"
                                        android:paddingRight="1dp"
                                        android:indeterminate="false"
                                        android:max="100"
                                        android:progress="40"/>

                                </RelativeLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/pollVoteCountTextView"
                                android:layout_width="match_parent"
                                android:text="44 Votes"
                                android:layout_marginTop="10dp"
                                android:paddingRight="10dp"
                                android:paddingLeft="10dp"
                                android:textSize="11sp"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--Petition ui-->
            <android.support.v7.widget.CardView
                android:id="@+id/petitionCardView"
                android:layout_width="match_parent"
                android:visibility="gone"
                app:cardElevation="0dp"
                app:cardCornerRadius="14dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/petitionUploaderNameTextView"
                            android:layout_width="wrap_content"
                            android:text="John Doe."
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/petitionCountyTextView"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Nairobi."
                            android:textSize="11sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/petitionDetailsTextView"
                        android:layout_width="match_parent"
                        android:text="Upload Details blah blah blah."
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="11sp"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:visibility="visible"
                        android:layout_margin="10dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="14dp"
                        android:layout_height="250dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/petitionImageViewBack"
                                android:src="@drawable/b"
                                android:layout_width="match_parent"
                                android:scaleType="centerCrop"
                                android:alpha="0.25"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:id="@+id/petitionImageView"
                                android:layout_width="match_parent"
                                android:scaleType="fitCenter"
                                android:layout_height="match_parent" />

                            <ProgressBar
                                android:id="@+id/petitionBlurProgressBar"
                                style="?android:attr/progressBarStyle"
                                android:layout_alignParentEnd="true"
                                android:visibility="invisible"
                                android:layout_margin="10dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/petitionPercentageProgressView"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:indeterminate="false"
                            android:max="100"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/numberSignedTextView"
                            android:layout_width="wrap_content"
                            android:text="44 signed"
                            android:textSize="11sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/signTextView"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:text="Sign."
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/loadingContainerLinearLayout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_back"
                android:layout_height="30dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/loaderCardView"
                android:layout_width="200dp"
                android:visibility="visible"
                app:cardElevation="0dp"
                app:cardCornerRadius="14dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="170dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="match_parent"
                    android:background="@drawable/b"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>