<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--Post with image part-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_back"
                android:layout_height="30dp" />

            <!--Announcement ui-->
            <android.support.v7.widget.CardView
                android:layout_width="200dp"
                android:visibility="gone"
                app:cardElevation="0dp"
                app:cardCornerRadius="14dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="John Doe."
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Upload Details blah blah blah."
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="11sp"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:visibility="visible"
                        android:layout_margin="10dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="14dp"
                        android:layout_height="150dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/postImageViewBack"
                                android:layout_width="match_parent"
                                android:scaleType="centerCrop"
                                android:alpha="0.25"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:id="@+id/postImageView"
                                android:layout_width="match_parent"
                                android:scaleType="fitCenter"
                                android:layout_height="match_parent" />

                            <ProgressBar
                                android:id="@+id/announcementBlurProgressBar"
                                style="?android:attr/progressBarStyle"
                                android:layout_alignParentEnd="true"
                                android:visibility="invisible"
                                android:layout_margin="10dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>



            </android.support.v7.widget.CardView>

            <!--Poll ui-->
            <android.support.v7.widget.CardView
                android:layout_width="200dp"
                android:visibility="gone"
                app:cardElevation="0dp"
                app:cardCornerRadius="14dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="John Doe."
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Upload Details blah blah blah."
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="11sp"
                        android:layout_height="wrap_content" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:layout_height="wrap_content">

                                <!--Option 1-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_height="wrap_content">

                                    <!--option text and percentage-->
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:text="Option One."
                                            android:scaleX="0.9"
                                            android:scaleY="0.9"
                                            android:textSize="12sp"
                                            android:layout_marginStart="1dp"
                                            android:layout_centerVertical="true"
                                            android:textColor="@color/grey"
                                            android:layout_height="30dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:text="37%"
                                            android:layout_marginRight="10dp"
                                            android:textSize="12sp"
                                            android:layout_centerVertical="true"
                                            android:layout_alignParentEnd="true"
                                            android:layout_height="wrap_content" />

                                    </RelativeLayout>

                                    <!--percentage bar-->
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/dialog_bg_stroke"
                                        android:layout_height="4dp">

                                        <View
                                            android:layout_width="match_parent"
                                            android:translationX="-160dp"
                                            android:background="@color/colorAccent"
                                            android:layout_height="match_parent"/>

                                    </RelativeLayout>

                                </LinearLayout>

                                <!--Option 2-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_height="wrap_content">

                                    <!--option text and percentage-->
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:text="Option One."
                                            android:scaleX="0.9"
                                            android:scaleY="0.9"
                                            android:textSize="12sp"
                                            android:layout_marginStart="1dp"
                                            android:layout_centerVertical="true"
                                            android:textColor="@color/grey"
                                            android:layout_height="30dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:text="37%"
                                            android:layout_marginRight="10dp"
                                            android:textSize="12sp"
                                            android:layout_centerVertical="true"
                                            android:layout_alignParentEnd="true"
                                            android:layout_height="wrap_content" />

                                    </RelativeLayout>

                                    <!--percentage bar-->
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/dialog_bg_stroke"
                                        android:layout_height="4dp">

                                        <View
                                            android:layout_width="match_parent"
                                            android:translationX="-160dp"
                                            android:background="@color/colorAccent"
                                            android:layout_height="match_parent"/>

                                    </RelativeLayout>

                                </LinearLayout>

                                <!--Option 3-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_height="wrap_content">

                                    <!--option text and percentage-->
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:text="Option One."
                                            android:scaleX="0.9"
                                            android:scaleY="0.9"
                                            android:textSize="12sp"
                                            android:layout_marginStart="1dp"
                                            android:layout_centerVertical="true"
                                            android:textColor="@color/grey"
                                            android:layout_height="30dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:text="37%"
                                            android:layout_marginRight="10dp"
                                            android:textSize="12sp"
                                            android:layout_centerVertical="true"
                                            android:layout_alignParentEnd="true"
                                            android:layout_height="wrap_content" />

                                    </RelativeLayout>

                                    <!--percentage bar-->
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/dialog_bg_stroke"
                                        android:layout_height="4dp">

                                        <View
                                            android:layout_width="match_parent"
                                            android:translationX="-160dp"
                                            android:background="@color/colorAccent"
                                            android:layout_height="match_parent"/>

                                    </RelativeLayout>

                                </LinearLayout>

                                <!--Option 4-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_height="wrap_content">

                                    <!--option text and percentage-->
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:text="Option One."
                                            android:scaleX="0.9"
                                            android:scaleY="0.9"
                                            android:textSize="12sp"
                                            android:layout_marginStart="1dp"
                                            android:layout_centerVertical="true"
                                            android:textColor="@color/grey"
                                            android:layout_height="30dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:text="37%"
                                            android:layout_marginRight="10dp"
                                            android:textSize="12sp"
                                            android:layout_centerVertical="true"
                                            android:layout_alignParentEnd="true"
                                            android:layout_height="wrap_content" />

                                    </RelativeLayout>

                                    <!--percentage bar-->
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/dialog_bg_stroke"
                                        android:layout_height="4dp">

                                        <View
                                            android:layout_width="match_parent"
                                            android:translationX="-160dp"
                                            android:background="@color/colorAccent"
                                            android:layout_height="match_parent"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--Petition ui-->
            <android.support.v7.widget.CardView
                android:layout_width="200dp"
                android:visibility="visible"
                app:cardElevation="0dp"
                app:cardCornerRadius="14dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="John Doe."
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Upload Details blah blah blah."
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="11sp"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:visibility="visible"
                        android:layout_margin="10dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="14dp"
                        android:layout_height="150dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/petitionImageViewBack"
                                android:layout_width="match_parent"
                                android:scaleType="centerCrop"
                                android:alpha="0.25"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:id="@+id/petitionImageView"
                                android:layout_width="match_parent"
                                android:scaleType="fitCenter"
                                android:layout_height="match_parent" />

                            <ProgressBar
                                android:id="@+id/petitionBlurProgressBar"
                                style="?android:attr/progressBarStyle"
                                android:layout_alignParentEnd="true"
                                android:visibility="invisible"
                                android:layout_margin="10dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/dialog_bg_stroke"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="match_parent"
                            android:translationX="-100dp"
                            android:background="@color/colorAccent"
                            android:layout_height="5dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="44 signed/100"
                            android:textSize="11sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:text="Sign."
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </LinearLayout>



            </android.support.v7.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>