<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ViewPostActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:background="@drawable/dialog_bg"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/previousActivityImageView"
                            android:visibility="visible"
                            android:layout_width="30dp"
                            android:layout_gravity="center_vertical"
                            android:translationY="1dp"
                            android:translationX="-5dp"
                            android:src="@drawable/ic_action_activity_back"
                            android:layout_height="30dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/userImageView"
                                android:layout_width="40dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/grey_back"
                                android:layout_height="40dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="10dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Announcement."
                                    android:textColor="@color/titlecolor"
                                    android:textSize="16sp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="By Username."
                                    android:textSize="14sp"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Post title blah blah blah..."
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </RelativeLayout>

            <!--Contains the announcement, poll and petition uis-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Announcement ui-->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="14dp"
                    android:layout_height="400dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/announcementPostImageViewBack"
                            android:layout_width="match_parent"
                            android:scaleType="centerCrop"
                            android:alpha="0.25"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/announcementImageView"
                            android:layout_width="match_parent"
                            android:scaleType="fitCenter"
                            android:layout_height="match_parent" />

                        <ProgressBar
                            android:id="@+id/announcementBlurProgressBar"
                            style="?android:attr/progressBarStyle"
                            android:layout_alignParentEnd="true"
                            android:visibility="invisible"
                            android:layout_margin="5dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <!--Poll ui-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:background="@drawable/dialog_bg"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <!--Option 1-->
                        <LinearLayout
                            android:id="@+id/option1LinearLayout"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">

                            <!--option text and percentage-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <CheckBox
                                    android:id="@+id/pollOption1CheckBox"
                                    android:layout_width="wrap_content"
                                    android:text="Option One."
                                    android:scaleX="0.9"
                                    android:scaleY="0.9"
                                    android:textSize="12sp"
                                    android:layout_marginStart="1dp"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/grey"
                                    android:layout_height="30dp" />

                                <TextView
                                    android:id="@+id/option1PercentageTextView"
                                    android:layout_width="wrap_content"
                                    android:text="37%"
                                    android:layout_marginRight="10dp"
                                    android:textSize="12sp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>

                            <!--percentage bar-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/dialog_bg_stroke"
                                android:layout_height="4dp">

                                <View
                                    android:id="@+id/option1PercentageBarView"
                                    android:layout_width="match_parent"
                                    android:translationX="-160dp"
                                    android:background="@color/colorAccent"
                                    android:layout_height="match_parent"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <!--Option 2-->
                        <LinearLayout
                            android:id="@+id/option2LinearLayout"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">

                            <!--option text and percentage-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <CheckBox
                                    android:id="@+id/option2CheckBox"
                                    android:layout_width="wrap_content"
                                    android:text="Option One."
                                    android:scaleX="0.9"
                                    android:scaleY="0.9"
                                    android:textSize="12sp"
                                    android:layout_marginStart="1dp"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/grey"
                                    android:layout_height="30dp" />

                                <TextView
                                    android:id="@+id/option2PercentageTextView"
                                    android:layout_width="wrap_content"
                                    android:text="37%"
                                    android:layout_marginRight="10dp"
                                    android:textSize="12sp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>

                            <!--percentage bar-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/dialog_bg_stroke"
                                android:layout_height="4dp">

                                <View
                                    android:id="@+id/option2PercentageBar"
                                    android:layout_width="match_parent"
                                    android:translationX="-160dp"
                                    android:background="@color/colorAccent"
                                    android:layout_height="match_parent"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <!--Option 3-->
                        <LinearLayout
                            android:id="@+id/option3LinearLayout"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">

                            <!--option text and percentage-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <CheckBox
                                    android:id="@+id/option3CheckBox"
                                    android:layout_width="wrap_content"
                                    android:text="Option One."
                                    android:scaleX="0.9"
                                    android:scaleY="0.9"
                                    android:textSize="12sp"
                                    android:layout_marginStart="1dp"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/grey"
                                    android:layout_height="30dp" />

                                <TextView
                                    android:id="@+id/option3PercentageTextView"
                                    android:layout_width="wrap_content"
                                    android:text="37%"
                                    android:layout_marginRight="10dp"
                                    android:textSize="12sp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>

                            <!--percentage bar-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/dialog_bg_stroke"
                                android:layout_height="4dp">

                                <View
                                    android:id="@+id/option3PercentageView"
                                    android:layout_width="match_parent"
                                    android:translationX="-160dp"
                                    android:background="@color/colorAccent"
                                    android:layout_height="match_parent"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <!--Option 4-->
                        <LinearLayout
                            android:id="@+id/option4LinearLayout"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">

                            <!--option text and percentage-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <CheckBox
                                    android:id="@+id/option4CheckBox"
                                    android:layout_width="wrap_content"
                                    android:text="Option One."
                                    android:scaleX="0.9"
                                    android:scaleY="0.9"
                                    android:textSize="12sp"
                                    android:layout_marginStart="1dp"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/grey"
                                    android:layout_height="30dp" />

                                <TextView
                                    android:id="@+id/option4PercentageTextView"
                                    android:layout_width="wrap_content"
                                    android:text="37%"
                                    android:layout_marginRight="10dp"
                                    android:textSize="12sp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>

                            <!--percentage bar-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/dialog_bg_stroke"
                                android:layout_height="4dp">

                                <View
                                    android:id="@+id/option4PercentageBarView"
                                    android:layout_width="match_parent"
                                    android:translationX="-160dp"
                                    android:background="@color/colorAccent"
                                    android:layout_height="match_parent"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <!--Petition ui-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/dialog_bg"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:visibility="visible"
                        android:layout_margin="10dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="14dp"
                        android:layout_height="350dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/petitionImageViewBack"
                                android:layout_width="match_parent"
                                android:scaleType="centerCrop"
                                android:alpha="0.25"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:id="@+id/petitionImageView"
                                android:layout_width="match_parent"
                                android:scaleType="fitCenter"
                                android:layout_height="match_parent" />

                            <ProgressBar
                                android:id="@+id/petitionBlurProgressBar"
                                style="?android:attr/progressBarStyle"
                                android:layout_alignParentEnd="true"
                                android:visibility="invisible"
                                android:layout_margin="10dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/dialog_bg_stroke"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/petitionPercentageView"
                            android:layout_width="match_parent"
                            android:translationX="-100dp"
                            android:background="@color/colorAccent"
                            android:layout_height="5dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/numberSignedTextView"
                            android:layout_width="wrap_content"
                            android:text="44 signed"
                            android:textSize="11sp"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/signTextView"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="15dp"
                            android:text="Sign."
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <!--Contains the comments section-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@drawable/dialog_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="14dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="40dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:background="@color/whiteish"
                            android:hint="@string/add_a_comment"
                            android:padding="5dp"
                            android:textSize="15sp"
                            android:layout_height="wrap_content" />

                    </android.support.v7.widget.CardView>

                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/ic_action_send_message"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_height="30dp" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>