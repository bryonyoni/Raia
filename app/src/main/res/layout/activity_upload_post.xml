<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/uploadActivityCoordinatorLayout"
    tools:context=".Activities.UploadPostActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Contains the top bar and content views-->
        <LinearLayout
            android:id="@+id/newPostLinearLayout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <!--Top bar part-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/dialog_bg"
                android:layout_margin="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/previousActivityImageView"
                    android:layout_width="25dp"
                    android:translationY="1dp"
                    android:src="@drawable/ic_action_activity_back"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/upload_post"
                    android:textColor="@color/titlecolor"
                    android:textSize="21sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--Contains the upload post setup part-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--Contains the select post type part-->
                <LinearLayout
                    android:id="@+id/uploadSelectorLinearLayout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:background="@drawable/dialog_bg"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/post_type"
                        android:textColor="@color/titlecolor"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/pleas_pick_the_type_of_post_your_uploading"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/openAnnouncementLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/openAnnouncementImageView"
                            android:layout_width="30dp"
                            android:src="@drawable/ic_action_announcement"
                            android:layout_height="30dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:translationY="-3dp"
                            android:text="@string/announcement"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/openPollLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/openPollImageView"
                            android:layout_width="30dp"
                            android:src="@drawable/ic_action_poll"
                            android:layout_height="30dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:translationY="-3dp"
                            android:text="@string/poll"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/openPetitionLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/openPetitionImageView"
                            android:layout_width="30dp"
                            android:src="@drawable/ic_action_petition"
                            android:layout_height="30dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:translationY="-1dp"
                            android:text="@string/petition"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <!--Contains the announcement details part-->
                <LinearLayout
                    android:id="@+id/announcementFormLinearLayout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:translationX="400dp"
                    android:alpha="0"
                    android:background="@drawable/dialog_bg"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <!--Contains the title and upload button part-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/announcementPreviousImageView"
                                android:layout_width="25dp"
                                android:translationY="1dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_action_activity_back"
                                android:layout_height="25dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/announcement_details"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/titlecolor"
                                android:textSize="17sp"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/uploadAnnouncementTextView"
                            android:layout_width="wrap_content"
                            android:text="@string/upload"
                            android:layout_marginEnd="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/titlecolor"
                            android:textSize="17sp"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/just_describe_what_your_announcing_and_a_photo_to_go_with_it"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/announcementDetailsEditText"
                        android:layout_width="match_parent"
                        android:hint="@string/whats_the_big_announcement"
                        android:inputType="textMultiLine"
                        android:padding="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:lines="4"
                        android:gravity="top"
                        android:textSize="16sp"
                        android:background="@drawable/dialog_bg"
                        android:textColorHint="@android:color/darker_gray"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content">

                        <!--Open camera layout-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/openAnnouncementCameraImageView"
                                android:layout_width="35dp"
                                android:src="@drawable/ic_action_camera"
                                android:layout_gravity="center_vertical"
                                android:layout_height="35dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Camera."
                                android:textSize="14sp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <!--Open gallery layout-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/openAnnouncementGalleryImageView"
                                android:layout_width="35dp"
                                android:translationY="2dp"
                                android:src="@drawable/ic_action_open_gallery"
                                android:layout_gravity="center_vertical"
                                android:layout_height="35dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/gallery"
                                android:textSize="14sp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:id="@+id/selectedAnnouncementCardView"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="14dp"
                        android:visibility="gone"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="200dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/selectedAnnouncementImageViewBack"
                                android:layout_width="match_parent"
                                android:scaleType="centerCrop"
                                android:alpha="0.25"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:id="@+id/selectedAnnouncementImageView"
                                android:layout_width="match_parent"
                                android:scaleType="fitCenter"
                                android:layout_height="match_parent" />

                            <ProgressBar
                                android:id="@+id/announcementBlurProgressBar"
                                style="?android:attr/progressBarStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <!--Contains poll details part-->
                <LinearLayout
                    android:id="@+id/pollFormLinearLayout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/dialog_bg"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:alpha="0"
                    android:translationX="400dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <!--Contains the title and upload button part-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/pollPreviousImageView"
                                android:layout_width="25dp"
                                android:translationY="1dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_action_activity_back"
                                android:layout_height="25dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/poll_details"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/titlecolor"
                                android:textSize="17sp"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/uploadPollTextView"
                            android:layout_width="wrap_content"
                            android:text="@string/upload"
                            android:layout_marginEnd="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/titlecolor"
                            android:textSize="17sp"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/describe_a_poll_question_for_users_to_decide_and_the_options_to_choose"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/pollQueryEditText"
                        android:layout_width="match_parent"
                        android:hint="@string/poll_question"
                        android:inputType="textMultiLine"
                        android:padding="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:lines="4"
                        android:gravity="top"
                        android:textSize="16sp"
                        android:background="@drawable/dialog_bg"
                        android:textColorHint="@android:color/darker_gray"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/poll_options"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/titlecolor"
                            android:textSize="17sp"
                            android:layout_height="wrap_content" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/addPollOptionImageView"
                                android:layout_width="30dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/ic_action_add"
                                android:layout_height="30dp" />

                            <EditText
                                android:id="@+id/pollOptionEditText"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center_vertical"
                                android:inputType="textPersonName"
                                android:background="@android:color/white"
                                android:textColor="@android:color/black"
                                android:textColorHint="@color/hintcolor"
                                android:hint="@string/type_option"
                                android:padding="10dp"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <!--Options that have been decided. Only 4 can be picked-->
                        <LinearLayout
                            android:id="@+id/addedOption1LinearLayout"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="15dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/deleteAddedOption1ImageView"
                                android:layout_width="20dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/ic_action_delete"
                                android:layout_height="20dp" />

                            <TextView
                                android:id="@+id/addedOption1TextView"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_gravity="center_vertical"
                                android:text="Option one Blah Blah Blah"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/addedOption2LinearLayout"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="15dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/deleteAddedOption2ImageView"
                                android:layout_width="20dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/ic_action_delete"
                                android:layout_height="20dp" />

                            <TextView
                                android:id="@+id/addedOption2TextView"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_gravity="center_vertical"
                                android:text="Option one Blah Blah Blah"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/addedOption3LinearLayout"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="15dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/deleteAddedOption3ImageView"
                                android:layout_width="20dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/ic_action_delete"
                                android:layout_height="20dp" />

                            <TextView
                                android:id="@+id/addedOption3TextView"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_gravity="center_vertical"
                                android:text="Option one Blah Blah Blah"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/addedOption4LinearLayout"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="15dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/deleteAddedOption4ImageView"
                                android:layout_width="20dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/ic_action_delete"
                                android:layout_height="20dp" />

                            <TextView
                                android:id="@+id/addedOption4TextView"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_gravity="center_vertical"
                                android:text="Option one Blah Blah Blah"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        <!--End of options-->

                    </LinearLayout>

                </LinearLayout>

                <!--Contains the petition part-->
                <LinearLayout
                    android:id="@+id/petitionFormLinearLayout"
                    android:visibility="gone"
                    android:alpha="0"
                    android:translationX="400dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/dialog_bg"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <!--Contains the title and upload button part-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/petitionPreviousImageView"
                                android:layout_width="25dp"
                                android:translationY="1dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_action_activity_back"
                                android:layout_height="25dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/petition_details"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/titlecolor"
                                android:textSize="17sp"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/uploadPetitionTextView"
                            android:layout_width="wrap_content"
                            android:text="@string/upload"
                            android:layout_marginEnd="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/titlecolor"
                            android:textSize="17sp"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/describe_what_your_petition_is_about_and_a_photo_to_go_along_with_it"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/petitionDetailsEditText"
                        android:layout_width="match_parent"
                        android:hint="@string/what_s_the_petition_about"
                        android:inputType="textMultiLine"
                        android:padding="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:lines="4"
                        android:gravity="top"
                        android:textSize="16sp"
                        android:background="@drawable/dialog_bg"
                        android:textColorHint="@android:color/darker_gray"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/petitionSignatureTargetEditText"
                        android:layout_width="220dp"
                        android:hint="@string/number_of_signatures_targeted"
                        android:inputType="number"
                        android:padding="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:background="@drawable/dialog_bg"
                        android:textColorHint="@android:color/darker_gray"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content">

                        <!--Open camera layout-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/openPetitionCameraImageView"
                                android:layout_width="35dp"
                                android:src="@drawable/ic_action_camera"
                                android:layout_gravity="center_vertical"
                                android:layout_height="35dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/camera"
                                android:textSize="14sp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <!--Open gallery layout-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/openPetitionGalleryImageView"
                                android:layout_width="35dp"
                                android:translationY="2dp"
                                android:src="@drawable/ic_action_open_gallery"
                                android:layout_gravity="center_vertical"
                                android:layout_height="35dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/gallery"
                                android:textSize="14sp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:id="@+id/selectedPetitionCardView"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="14dp"
                        android:visibility="gone"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="200dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/selectedPetitionImageViewBack"
                                android:layout_width="match_parent"
                                android:scaleType="centerCrop"
                                android:alpha="0.25"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:id="@+id/selectedPetitionImageView"
                                android:layout_width="match_parent"
                                android:scaleType="fitCenter"
                                android:layout_height="match_parent" />

                            <ProgressBar
                                android:id="@+id/petitionBlurProgressBar"
                                style="?android:attr/progressBarStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="10dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <!--Contains the finished up part-->
                <LinearLayout
                    android:id="@+id/finishedUpLinearLayout"
                    android:visibility="gone"
                    android:alpha="0"
                    android:translationX="400dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/dialog_bg"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/upload_success"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/titlecolor"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textSize="17sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/your_post_has_been_uploaded"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/finishUpButton"
                            android:layout_width="wrap_content"
                            android:text="@string/finish"
                            android:layout_alignParentEnd="true"
                            android:background="@null"
                            android:layout_marginEnd="20dp"
                            android:textColor="@color/titlecolor"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

            
        </LinearLayout>

        <!--Contains the progressbar part-->
        <RelativeLayout
            android:id="@+id/progressBarRelativeLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progressBarSignUp"
                style="?android:attr/progressBarStyle"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>