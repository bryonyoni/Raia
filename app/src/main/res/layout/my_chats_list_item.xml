<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/chatRelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/dialog_bg"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/userMImageView"
                        android:layout_width="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/grey_back"
                        android:layout_height="40dp" />

                    <View
                        android:id="@+id/newMessagesView"
                        android:layout_width="13dp"
                        android:visibility="visible"
                        android:background="@drawable/circle"
                        android:alpha="0.9"
                        android:layout_height="13dp"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/userNameTextView"
                        android:layout_width="wrap_content"
                        android:text="Micchael Marya."
                        android:textColor="@color/titlecolor"
                        android:textSize="16sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/lastMessageTextView"
                        android:layout_width="match_parent"
                        android:text="Are you still coming through with the plans?"
                        android:textSize="13sp"
                        android:layout_height="19dp" />

                </LinearLayout>

            </LinearLayout>

    </LinearLayout>

</RelativeLayout>